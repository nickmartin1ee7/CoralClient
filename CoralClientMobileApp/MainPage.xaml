<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CoralClientMobileApp.ViewModel"
             xmlns:converters="clr-namespace:CoralClientMobileApp.Converters"
             x:Class="CoralClientMobileApp.MainPage"
             BackgroundColor="{AppThemeBinding Light={DynamicResource PageBackgroundColor}, Dark={DynamicResource PageBackgroundColorDark}}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Value Converters -->
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:StatusColorConverter x:Key="StatusColorConverter" />
            <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter" />
            <converters:IsNullConverter x:Key="IsNullConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image x:Name="LogoImage"
                   Grid.Row="0"
                   Aspect="AspectFit"
                   Opacity="0.5" />

            <CarouselView Grid.Row="0"
                          ItemsSource="{Binding ServerProfiles}"
                          IndicatorView="indicatorView"
                          PeekAreaInsets="15"
                          Loop="False">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5,10">
                            <Frame BackgroundColor="{AppThemeBinding Light={DynamicResource FrameBackgroundColor}, Dark={DynamicResource FrameBackgroundColorDark}}"
                                   BorderColor="{AppThemeBinding Light={DynamicResource BorderColor}, Dark={DynamicResource BorderColorDark}}"
                                   CornerRadius="16"
                                   HasShadow="True"
                                   Padding="0">
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Header with server address -->
                                    <Grid Grid.Row="0" BackgroundColor="{AppThemeBinding Light={DynamicResource Primary}, Dark={DynamicResource Secondary}}" Padding="16,12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <Label Grid.Column="0"
                                               Text="{Binding ServerUriText}"
                                               TextColor="White"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               VerticalOptions="Center" />
                                        
                                        <Label Grid.Column="1"
                                               Text="{Binding PingText}"
                                               TextColor="White"
                                               FontSize="12"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End"
                                               IsVisible="{Binding IsOnline}" />
                                    </Grid>

                                    <!-- Server Status Content -->
                                    <StackLayout Grid.Row="1" Padding="16" Spacing="12">
                                        <!-- Loading indicator -->
                                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                                         IsVisible="{Binding IsLoading}"
                                                         Color="{AppThemeBinding Light={DynamicResource Primary}, Dark={DynamicResource PrimaryLight}}"
                                                         HorizontalOptions="Center" />
                                        
                                        <!-- Server status when not loading -->
                                        <StackLayout IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                                                   Spacing="8">
                                            
                                            <!-- Status indicator -->
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                
                                                <Ellipse Grid.Column="0"
                                                       Fill="{Binding IsOnline, Converter={StaticResource StatusColorConverter}}"
                                                       WidthRequest="12"
                                                       HeightRequest="12"
                                                       VerticalOptions="Center"
                                                       Margin="0,0,8,0" />
                                                
                                                <Label Grid.Column="1"
                                                     Text="{Binding StatusText}"
                                                     FontSize="14"
                                                     FontAttributes="Bold"
                                                     TextColor="{AppThemeBinding Light={DynamicResource PrimaryTextColor}, Dark={DynamicResource PrimaryTextColorDark}}"
                                                     VerticalOptions="Center" />
                                            </Grid>

                                            <!-- Version info -->
                                            <Label Text="{Binding VersionText}"
                                                 FontSize="12"
                                                 TextColor="{AppThemeBinding Light={DynamicResource SecondaryTextColor}, Dark={DynamicResource SecondaryTextColorDark}}"
                                                 IsVisible="{Binding IsOnline}"
                                                 LineBreakMode="WordWrap" />
                                            
                                            <!-- MOTD -->
                                            <Label Text="{Binding MotdText}"
                                                 FontSize="12"
                                                 FontAttributes="Italic"
                                                 TextColor="{AppThemeBinding Light={DynamicResource SecondaryTextColor}, Dark={DynamicResource SecondaryTextColorDark}}"
                                                 IsVisible="{Binding IsOnline}"
                                                 LineBreakMode="WordWrap"
                                                 Margin="0,4,0,0" />
                                            
                                            <!-- Detailed server info (Game type, Map, etc.) -->
                                            <Label Text="{Binding DetailedServerInfo}"
                                                 FontSize="11"
                                                 TextColor="{AppThemeBinding Light={DynamicResource TertiaryTextColor}, Dark={DynamicResource TertiaryTextColorDark}}"
                                                 IsVisible="{Binding IsOnline}"
                                                 LineBreakMode="WordWrap"
                                                 Margin="0,4,0,0" />
                                            
                                            <!-- Plugins info -->
                                            <Label Text="{Binding PluginsText}"
                                                 FontSize="11"
                                                 TextColor="{AppThemeBinding Light={DynamicResource TertiaryTextColor}, Dark={DynamicResource TertiaryTextColorDark}}"
                                                 IsVisible="{Binding IsOnline}"
                                                 LineBreakMode="WordWrap"
                                                 Margin="0,2,0,0" />
                                            
                                            <!-- Player list (if available) -->
                                            <Label Text="{Binding PlayerListText}"
                                                 FontSize="11"
                                                 TextColor="{AppThemeBinding Light={DynamicResource TertiaryTextColor}, Dark={DynamicResource TertiaryTextColorDark}}"
                                                 IsVisible="{Binding HasPlayerList}"
                                                 LineBreakMode="WordWrap"
                                                 Margin="0,4,0,0" />
                                        </StackLayout>
                                    </StackLayout>

                                    <!-- Action buttons -->
                                    <Grid Grid.Row="3" Padding="16,0,16,16">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- First row: Edit and Delete buttons -->
                                        <Button Grid.Row="0" Grid.Column="0"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=EditProfileCommand}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource SecondaryButton}"
                                                Text="Edit"
                                                Margin="0,0,4,8" />

                                        <Button Grid.Row="0" Grid.Column="1"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=DeleteProfileCommand}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource DangerButton}"
                                                Text="Delete"
                                                Margin="4,0,0,8" />

                                        <!-- Second row: Connect button spanning both columns -->
                                        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=LaunchProfileCommand}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource PrimaryButton}"
                                                Text="Connect" />
                                    </Grid>
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <!-- Carousel indicator -->
            <IndicatorView x:Name="indicatorView"
                           Grid.Row="1"
                           IndicatorColor="{AppThemeBinding Light={DynamicResource BorderColor}, Dark={DynamicResource BorderColorDark}}"
                           SelectedIndicatorColor="{AppThemeBinding Light={DynamicResource Primary}, Dark={DynamicResource PrimaryLight}}"
                           VerticalOptions="End"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0" />

            <Button x:Name="AddServerProfileButton"
                    Grid.Row="2"
                    Command="{Binding AddServerProfileCommand}"
                    Style="{DynamicResource PrimaryButton}"
                    Margin="0,16,0,0"
                    Text="Add Server" />
        </Grid>
</ContentPage>
