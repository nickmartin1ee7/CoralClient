<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CoralClientMobileApp.ViewModel"
             x:Class="CoralClientMobileApp.MainPage"
             BackgroundColor="{AppThemeBinding Light={DynamicResource BackgroundLight}, Dark={DynamicResource BackgroundDark}}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackLayout Grid.Row="0" Orientation="Vertical" Spacing="8" Margin="0,20,0,30">
            <Label Text="🎮 Coral Client" 
                   Style="{DynamicResource TitleLabel}"
                   HorizontalTextAlignment="Center" />
            <Label Text="Minecraft Server Management" 
                   Style="{DynamicResource BodyLabel}"
                   HorizontalTextAlignment="Center" />
        </StackLayout>

        <!-- Server Count Info -->
        <Frame Grid.Row="1" 
               Style="{DynamicResource MinecraftCardFrame}"
               Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <Label Grid.Column="0"
                       Text="{Binding ServerCountText}" 
                       Style="{DynamicResource BodyLabel}"
                       VerticalOptions="Center" />
                       
                <Label Grid.Column="1"
                       Text="🏗️" 
                       FontSize="24"
                       VerticalOptions="Center" />
            </Grid>
        </Frame>

        <!-- Server Profiles Carousel -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Empty State -->
            <StackLayout x:Name="EmptyStateLayout" 
                         Grid.Row="0"
                         IsVisible="{Binding IsEmptyState}"
                         VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Spacing="20">
                <Label Text="🏗️" FontSize="72" HorizontalTextAlignment="Center" />
                <Label Text="No servers configured" 
                       Style="{DynamicResource SubtitleLabel}" 
                       HorizontalTextAlignment="Center" />
                <Label Text="Add your first Minecraft server to get started" 
                       Style="{DynamicResource BodyLabel}" 
                       HorizontalTextAlignment="Center" />
            </StackLayout>

            <!-- Carousel View for Server Profiles -->
            <CarouselView x:Name="ServerProfilesCarousel" 
                          Grid.Row="0"
                          ItemsSource="{Binding ServerProfiles}"
                          IsVisible="{Binding HasServerProfiles}"
                          PeekAreaInsets="60"
                          Loop="False">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Frame Style="{DynamicResource ServerCardFrame}"
                               Margin="12,20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Server Icon and Status -->
                                <Grid Grid.Row="0" Margin="0,0,0,16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Frame Grid.Column="0" 
                                           BackgroundColor="{DynamicResource Primary}"
                                           CornerRadius="8"
                                           Padding="8"
                                           HasShadow="False">
                                        <Label Text="🎮" FontSize="24" TextColor="White" />
                                    </Frame>

                                    <StackLayout Grid.Column="1" 
                                                 Orientation="Vertical" 
                                                 VerticalOptions="Center"
                                                 Margin="12,0,0,0">
                                        <Label Text="{Binding ServerUriText}" 
                                               Style="{DynamicResource ServerNameLabel}" />
                                        <Label Text="Ready to connect" 
                                               Style="{DynamicResource BodyLabel}"
                                               FontSize="14" />
                                    </StackLayout>

                                    <Frame Grid.Column="2"
                                           BackgroundColor="{DynamicResource Success}"
                                           CornerRadius="20"
                                           Padding="8,4"
                                           HasShadow="False">
                                        <Label Text="●" 
                                               TextColor="White"
                                               FontSize="12"
                                               HorizontalTextAlignment="Center" />
                                    </Frame>
                                </Grid>

                                <!-- Server Details -->
                                <StackLayout Grid.Row="1" Orientation="Vertical" Spacing="8" Margin="0,0,0,16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="🌐 Address:" Style="{DynamicResource BodyLabel}" FontSize="14" />
                                        <Label Grid.Column="1" Text="{Binding Uri}" Style="{DynamicResource BodyLabel}" FontSize="14" />
                                    </Grid>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="🔌 MC Port:" Style="{DynamicResource BodyLabel}" FontSize="14" />
                                        <Label Grid.Column="1" Text="{Binding MinecraftPort}" Style="{DynamicResource BodyLabel}" FontSize="14" />
                                    </Grid>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Text="⚡ RCON Port:" Style="{DynamicResource BodyLabel}" FontSize="14" />
                                        <Label Grid.Column="1" Text="{Binding RconPort}" Style="{DynamicResource BodyLabel}" FontSize="14" />
                                    </Grid>
                                </StackLayout>

                                <!-- Spacer -->
                                <BoxView Grid.Row="3" />

                                <!-- Action Buttons -->
                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=LaunchProfileCommand}"
                                            CommandParameter="{Binding}"
                                            Style="{DynamicResource PrimaryButton}"
                                            Text="Connect"
                                            Margin="0,0,8,0" />

                                    <Button Grid.Column="1"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=EditProfileCommand}"
                                            CommandParameter="{Binding}"
                                            Style="{DynamicResource IconButton}"
                                            Text="✏️"
                                            Margin="4,0" />

                                    <Button Grid.Column="2"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=DeleteProfileCommand}"
                                            CommandParameter="{Binding}"
                                            Style="{DynamicResource IconButton}"
                                            Text="🗑️"
                                            Margin="4,0,0,0" />
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <!-- Carousel Indicators -->
            <IndicatorView x:Name="ServerProfilesIndicator"
                           Grid.Row="1"
                           IndicatorColor="{AppThemeBinding Light={DynamicResource BorderLight}, Dark={DynamicResource BorderDark}}"
                           SelectedIndicatorColor="{DynamicResource Primary}"
                           HorizontalOptions="Center"
                           Margin="0,16,0,0"
                           IsVisible="{Binding HasMultipleServers}" />
        </Grid>

        <!-- Add Server Button -->
        <Button x:Name="AddServerProfileButton"
                Grid.Row="3"
                Command="{Binding AddServerProfileCommand}"
                Style="{DynamicResource PrimaryButton}"
                Margin="0,30,0,20"
                Text="➕ Add New Server" />
    </Grid>
</ContentPage>
