<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CoralClientMobileApp.ViewModel"
             x:Class="CoralClientMobileApp.MainPage"
             BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1f1f1f}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Inline Button Styles -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#FFFFFF, Dark=#000000}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FF69B4, Dark=#FFB3BA}" />
                <Setter Property="FontFamily" Value="OpenSansRegular"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="BorderWidth" Value="0"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="MinimumHeightRequest" Value="44"/>
                <Setter Property="MinimumWidthRequest" Value="44"/>
            </Style>

            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#FF69B4, Dark=#FFB3BA}" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="{AppThemeBinding Light=#FF69B4, Dark=#FFB3BA}" />
                <Setter Property="BorderWidth" Value="2"/>
                <Setter Property="FontFamily" Value="OpenSansRegular"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="MinimumHeightRequest" Value="44"/>
                <Setter Property="MinimumWidthRequest" Value="44"/>
            </Style>

            <Style x:Key="DangerButton" TargetType="Button">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#FFFFFF, Dark=#FFFFFF}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#C71585, Dark=#8B4B8C}" />
                <Setter Property="FontFamily" Value="OpenSansRegular"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderWidth" Value="0"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="MinimumHeightRequest" Value="44"/>
                <Setter Property="MinimumWidthRequest" Value="44"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image x:Name="LogoImage"
                   Aspect="AspectFit"
                   Opacity="0.5" />

            <CollectionView Grid.Row="0"
                            ItemsSource="{Binding ServerProfiles}"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,8,0,8"
                            BackgroundColor="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Frame Grid.ColumnSpan="3"
                                   BackgroundColor="{AppThemeBinding Light=#FFB3BA, Dark=#8B4B8C}"
                                   Opacity="0.25"
                                   BorderColor="{AppThemeBinding Light=#FF69B4, Dark=#FFB3BA}"
                                   CornerRadius="8"
                                   HasShadow="False" />

                            <Button x:Name="LaunchProfileButton" Grid.Column="0"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=LaunchProfileCommand}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="8,8,4,8"
                                    Text="{Binding ServerUriText}"/>

                            <Button x:Name="EditProfileButton" Grid.Column="1"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=EditProfileCommand}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource SecondaryButton}"
                                    Margin="4,8,4,8"
                                    Text="Edit" />

                            <Button x:Name="DeleteProfileButton" Grid.Column="2"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:MainPageViewModel}}, Path=DeleteProfileCommand}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource DangerButton}"
                                    Margin="4,8,8,8"
                                    Text="Delete" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button x:Name="AddServerProfileButton"
                    Grid.Row="1"
                    Command="{Binding AddServerProfileCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,16,0,0"
                    Text="Add Server" />
        </Grid>
</ContentPage>
