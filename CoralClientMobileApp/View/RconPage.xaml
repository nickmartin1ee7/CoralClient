<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CoralClientMobileApp.ViewModel"
             xmlns:converters="clr-namespace:CoralClientMobileApp.Converters"
             x:Class="CoralClientMobileApp.View.RconPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource PageBackgroundColor}, Dark={StaticResource PageBackgroundColorDark}}">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Value Converters -->
            <converters:IsNullConverter x:Key="IsNullConverter" />
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ScrollView>
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />  <!-- Server Info Header -->
                <RowDefinition Height="Auto" />  <!-- Control Tabs -->
                <RowDefinition Height="*" />     <!-- Main Content Area -->
                <RowDefinition Height="Auto" />  <!-- Connection Controls -->
            </Grid.RowDefinitions>

            <!-- Server Info Header -->
            <Frame Grid.Row="0" Style="{DynamicResource CardFrameStyle}" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" 
                           HorizontalTextAlignment="Center"
                           Style="{DynamicResource SubHeadline}"
                           Margin="0,8,0,8"
                           Text="{Binding ServerNameText}" />

                    <Label Grid.Column="0" Grid.Row="1" 
                           Style="{DynamicResource StatusLabel}"
                           FontSize="14"
                           Text="{Binding ConnectionStatusText}" />

                    <Label Grid.Column="1" Grid.Row="1" 
                           Style="{DynamicResource PlayerCountLabel}"
                           FontSize="14"
                           Text="{Binding OnlinePlayerText}" />

                    <Label Grid.Column="0" Grid.Row="2" 
                           Style="{DynamicResource SecondaryLabelStyle}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="End"
                           Text="{Binding ServerVersionText}" />

                    <Label Grid.Column="1" Grid.Row="2" 
                           Style="{DynamicResource TertiaryLabelStyle}"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="End"
                           Text="{Binding ServerMotdText}" />
                </Grid>
            </Frame>

            <!-- Control Tabs -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Text="Console" 
                        Command="{Binding ShowConsoleTabCommand}"
                        Style="{DynamicResource PrimaryButton}"
                        FontSize="12" Margin="2" />

                <Button Grid.Column="1" Text="Players" 
                        Command="{Binding ShowPlayersTabCommand}"
                        Style="{DynamicResource PrimaryButton}"
                        FontSize="12" Margin="2" />

                <Button Grid.Column="2" Text="Server" 
                        Command="{Binding ShowServerTabCommand}"
                        Style="{DynamicResource PrimaryButton}"
                        FontSize="12" Margin="2" />

                <Button Grid.Column="3" Text="Editor" 
                        Command="{Binding ShowCustomTabCommand}"
                        Style="{DynamicResource SecondaryButton}"
                        FontSize="12" Margin="2" />
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="2" Margin="0,0,0,16">
                
                <!-- Console Tab -->
                <Grid IsVisible="{Binding IsConsoleTabVisible}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Frame Grid.Row="0" Style="{DynamicResource CommandLogFrame}">
                        <Editor x:Name="CommandLogEditor"
                                Style="{DynamicResource CommandLogEditor}"
                                Text="{Binding CommandLogText}" />
                    </Frame>

                    <Entry Grid.Row="1" 
                           Placeholder="Enter Command"
                           Style="{DynamicResource CommandEntry}"
                           IsEnabled="{Binding IsSendCommandEnabled}"
                           ReturnCommand="{Binding SendCommandCommand}"
                           MaximumHeightRequest="800"
                           Text="{Binding CommandEntryText}" />
                </Grid>

                <!-- Players Tab -->
                <Grid IsVisible="{Binding IsPlayersTabVisible}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Player Controls Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Entry Grid.Column="0" 
                               Placeholder="Player Name"
                               Text="{Binding SelectedPlayerName}"
                               Style="{DynamicResource EntryStyle}" />
                    </Grid>

                    <!-- Player List -->
                    <Frame Grid.Row="1" Style="{DynamicResource CardFrameStyle}" Margin="0,0,0,8">
                        <CollectionView ItemsSource="{Binding OnlinePlayers}" 
                                        SelectionMode="Single"
                                        SelectedItem="{Binding SelectedPlayer}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="8">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup Name="CommonStates">
                                                <VisualState Name="Normal">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="Transparent" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                                <VisualState Name="Selected">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource SelectionColor}, Dark={StaticResource SelectionColorDark}}" />
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Avatar Image -->
                                        <Frame Grid.Column="0" 
                                               WidthRequest="32" 
                                               HeightRequest="32" 
                                               CornerRadius="4"
                                               IsClippedToBounds="True"
                                               Padding="0"
                                               Margin="0,0,8,0">
                                            <Grid>
                                                <!-- Default avatar or loading indicator -->
                                                <Label Text="👤" 
                                                       FontSize="20"
                                                       HorizontalTextAlignment="Center"
                                                       VerticalTextAlignment="Center"
                                                       IsVisible="{Binding AvatarUrl, Converter={StaticResource IsNullConverter}}" />
                                                
                                                <!-- Player avatar -->
                                                <Image Source="{Binding AvatarUrl}"
                                                       Aspect="AspectFill"
                                                       IsVisible="{Binding AvatarUrl, Converter={StaticResource IsNotNullConverter}}" />
                                                
                                                <!-- Loading indicator -->
                                                <ActivityIndicator IsRunning="{Binding IsLoadingAvatar}"
                                                                   IsVisible="{Binding IsLoadingAvatar}"
                                                                   Color="{AppThemeBinding Light={StaticResource ActivityIndicatorColor}, Dark={StaticResource ActivityIndicatorColorDark}}"
                                                                   WidthRequest="16"
                                                                   HeightRequest="16" />
                                            </Grid>
                                        </Frame>
                                        
                                        <Label Grid.Column="1" 
                                               Text="{Binding Name}" 
                                               Style="{DynamicResource LabelStyle}"
                                               VerticalTextAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Frame>

                    <!-- Player Commands -->
                    <CollectionView Grid.Row="2" ItemsSource="{Binding PlayerCommandGroups}" Margin="0,8,0,0">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout>
                                        <Label Text="{Binding CategoryName}" 
                                               Style="{DynamicResource LabelStyle}" 
                                               FontSize="12" 
                                               FontAttributes="Bold"
                                               HorizontalTextAlignment="Center"
                                               Margin="0,4,0,4" />
                                        
                                        <CollectionView ItemsSource="{Binding Commands}">
                                            <CollectionView.ItemsLayout>
                                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="4" />
                                            </CollectionView.ItemsLayout>
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Padding="4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>

                                                        <Label Grid.Column="0" Grid.Row="0" 
                                                               Text="{Binding Name}" 
                                                               Style="{DynamicResource LabelStyle}" 
                                                               FontSize="12" />

                                                        <Label Grid.Column="0" Grid.Row="1" 
                                                               Text="{Binding Description}" 
                                                               Style="{DynamicResource SecondaryLabelStyle}" 
                                                               FontSize="10" />

                                                        <StackLayout Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" 
                                                                     Orientation="Horizontal" 
                                                                     VerticalOptions="Center">
                                                            <Button Text="Run"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ExecuteCustomCommandCommand}"
                                                                    CommandParameter="{Binding .}"
                                                                    Style="{DynamicResource PrimaryCommandActionButton}" />
                                                            
                                                            <Button Text="Edit"
                                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCustomCommandCommand}"
                                                                    CommandParameter="{Binding .}"
                                                                    Style="{DynamicResource SecondaryCommandActionButton}" />
                                                        </StackLayout>
                                                    </Grid>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                </Grid>

                <!-- Server Tab -->
                <Grid IsVisible="{Binding IsServerTabVisible}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Server Commands -->
                    <CollectionView Grid.Row="0" ItemsSource="{Binding ServerCommandGroups}" Margin="0,8,0,0">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Label Text="{Binding CategoryName}" 
                                           Style="{DynamicResource LabelStyle}" 
                                           FontSize="12" 
                                           FontAttributes="Bold"
                                           HorizontalTextAlignment="Center"
                                           Margin="0,4,0,4" />
                                    
                                    <CollectionView ItemsSource="{Binding Commands}">
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="4" />
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Padding="4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>

                                                    <Label Grid.Column="0" Grid.Row="0" 
                                                           Text="{Binding Name}" 
                                                           Style="{DynamicResource LabelStyle}" 
                                                           FontSize="12" />

                                                    <Label Grid.Column="0" Grid.Row="1" 
                                                           Text="{Binding Description}" 
                                                           Style="{DynamicResource SecondaryLabelStyle}" 
                                                           FontSize="10" />

                                                    <StackLayout Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" 
                                                                 Orientation="Horizontal" 
                                                                 VerticalOptions="Center">
                                                        <Button Text="Run"
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ExecuteCustomCommandCommand}"
                                                                CommandParameter="{Binding .}"
                                                                Style="{DynamicResource PrimaryCommandActionButton}" />
                                                        
                                                        <Button Text="Edit"
                                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditCustomCommandCommand}"
                                                                CommandParameter="{Binding .}"
                                                                Style="{DynamicResource SecondaryCommandActionButton}" />
                                                    </StackLayout>
                                                </Grid>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Grid>

            <!-- Connection Controls -->
            <Button Grid.Row="3"
                    Command="{Binding ToggleConnectionCommand}"
                    Style="{DynamicResource PrimaryButton}"
                    Text="{Binding ToggleConnectionButtonText}"
                    IsEnabled="{Binding IsConnectionButtonEnabled}" />
        </Grid>
    </ScrollView>
</ContentPage>
