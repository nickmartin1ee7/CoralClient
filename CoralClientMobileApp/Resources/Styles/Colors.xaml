<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Light Theme Colors -->
    <Color x:Key="Primary">#FF69B4</Color>
    <Color x:Key="PrimaryDark">#C71585</Color>
    <Color x:Key="PrimaryLight">#FFB3BA</Color>
    <Color x:Key="Secondary">#8B4B8C</Color>
    
    <!-- Background Colors -->
    <Color x:Key="PageBackgroundColor">#FFFFFF</Color>
    <Color x:Key="PageBackgroundColorDark">#1f1f1f</Color>
    <Color x:Key="CardBackgroundColor">#F8F8F8</Color>
    <Color x:Key="CardBackgroundColorDark">#2D2D30</Color>
    <Color x:Key="FrameBackgroundColor">#FFFFFF</Color>
    <Color x:Key="FrameBackgroundColorDark">#2d2d2d</Color>
    <Color x:Key="BorderColor">#E0E0E0</Color>
    <Color x:Key="BorderColorDark">#404040</Color>
    
    <!-- Text Colors -->
    <Color x:Key="PrimaryTextColor">#333333</Color>
    <Color x:Key="PrimaryTextColorDark">#CCCCCC</Color>
    <Color x:Key="SecondaryTextColor">#666666</Color>
    <Color x:Key="SecondaryTextColorDark">#AAAAAA</Color>
    <Color x:Key="TertiaryTextColor">#888888</Color>
    <Color x:Key="TertiaryTextColorDark">#999999</Color>
    <Color x:Key="PlaceholderTextColor">#999999</Color>
    <Color x:Key="PlaceholderTextColorDark">#888888</Color>
    
    <!-- Additional Text Colors -->
    <Color x:Key="StatusTextColor">#404040</Color>
    <Color x:Key="StatusTextColorDark">#ACACAC</Color>
    <Color x:Key="CommandEntryPlaceholderColor">#919191</Color>
    <Color x:Key="CommandEntryPlaceholderColorDark">#6E6E6E</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessColor">#28a745</Color>
    <Color x:Key="ErrorColor">#dc3545</Color>
    <Color x:Key="WarningColor">#ffc107</Color>
    <Color x:Key="InfoColor">#17a2b8</Color>
    
    <!-- Activity Indicator Colors -->
    <Color x:Key="ActivityIndicatorColor">#007ACC</Color>
    <Color x:Key="ActivityIndicatorColorDark">#00D4FF</Color>
    
    <!-- Selection Colors -->
    <Color x:Key="SelectionColor">#8B4B8C</Color>
    <Color x:Key="SelectionColorDark">#8B4B8C</Color>
    
    <!-- Transparent -->
    <Color x:Key="Transparent">Transparent</Color>
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

</ResourceDictionary>